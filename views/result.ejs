    <div class="container">
        <h1>Thank You, <%= name %>!</h1>
        <h3>Your submitted tasks and their respective costs are:</h3>
        <% if (selectedTasks.length === 0) { %>
            <p>No tasks were selected.</p>
        <% } else { %>
            <ul>
                <% selectedTasks.forEach((amount, index) => { %>
                    <li>
                        Task <%= index + 1 %>
                        <span><%= amount %> INR</span>
                    </li>
                <% }) %>
            </ul>
            <div class="total">Total Cost: â‚¹ <%= totalCost %></div>
        <% } %>
    </div>
