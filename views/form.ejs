    <script>
      function saveSelectedTasks() {
    const selectedTasks = [];
    const checkboxes = document.querySelectorAll('input[name="tasks"]:checked');

    checkboxes.forEach(function(checkbox) {
        selectedTasks.push({
            name: checkbox.getAttribute('data-task'),
            amount: parseInt(checkbox.value)
        });
    });

    // Calculate the total cost on the client-side
    const totalCost = selectedTasks.reduce((sum, task) => sum + task.amount, 0);

    // Optionally, display the total cost on the page or in a hidden field
    console.log("Total Cost: " + totalCost); // Just logs to console, can be displayed on page

    // Save selected tasks in localStorage
    localStorage.setItem('selectedTasks', JSON.stringify(selectedTasks));
    localStorage.setItem('totalCost', totalCost); // Save total cost to localStorage if needed

    // Redirect to second page
    window.location.href = '/result';
}


    </script>
